  "license": "MIT",
  "dependencies": {
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.4.0",
    "chalk": "^1.1.3",
    "dataloader": "^1.3.0",
    "dotenv": "^4.0.0",
    "express": "^4.15.2",
    "express-graphql": "^0.6.4",
    "graphql": "^0.9.3",
    "immutable": "4.0.0-rc.2",
    "mysql": "^2.13.0",
    "sequelize": "^3.30.4"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.0.0",
    "babel-plugin-dynamic-import-node": "^1.0.1",
    "babel-plugin-relay": "v1.0.1-rc.3",
    "babel-plugin-styled-components": "^1.1.4",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "cross-env": "^4.0.0",
    "css-loader": "^0.28.0",
    "eslint": "^3.19.0",
    "eslint-config-react-app": "^0.6.2",
    "eslint-plugin-flowtype": "^2.32.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "file-loader": "^0.11.1",
    "flow-bin": "^0.45.0",
    "html-webpack-plugin": "^2.28.0",
    "husky": "^0.13.3",
    "jasmine-check": "^1.0.0-rc.0",
    "jest": "^19.0.2",
    "jest-styled-components": "^1.3.3",
    "lint-staged": "^3.4.0",
    "prettier": "^1.2.2",
    "react": "16.0.0-alpha.11",
    "react-dom": "16.0.0-alpha.11",
    "react-hot-loader": "3.0.0-beta.6",
    "react-relay": "1.0.0-rc.3",
    "react-test-renderer": "16.0.0-alpha.11",
    "sqlite3": "^3.1.8",
    "style-loader": "^0.16.1",
    "styled-components": "2.0.0-17",
    "supertest": "^3.0.0",
    "url-loader": "^0.5.8",
    "webpack": "^2.4.1",
    "webpack-dev-server": "^2.4.5",
    "webpack-hot-middleware": "^2.18.0",
    "webpack-merge": "^4.1.0"
  },
  "scripts": {
    "lint": "eslint **/*.js",
    "precommit": "lint-staged",
    "start": "nodemon ./src & cross-env NODE_ENV=development webpack-dev-server --config=./example/config/webpack/webpack.base.js --env=development",
    "start:app": "nodemon ./src",
    "start:example": "NODE_ENV=development webpack-dev-server --config=./example/config/webpack/webpack.base.js --env=development",
    "test": "jest",
    "test:cov": "jest --coverage"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "example/src/**/*.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](coverage|node_modules|scripts|config|example/config)[/\\\\]"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "timers": "fake",
    "transform": {
      "^.+\\.(js|jsx$)": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/styleTransform.js",
      "^(?!.*\\.(js|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.jsx?$"
    ],
    "unmockedModulePathPatterns": [
      "node_modules/react/"
    ]
  },
  "lint-staged": {
    "{config,example,src}/**/*.{js,js.flow}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
